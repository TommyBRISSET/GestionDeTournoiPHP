{% extends 'base.html.twig' %}

{% block title %}Plateforme de Gestion de Tournois de Sport{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet">
    <style>
        body[data-page="tournament-management"] {
            background-color: #f4f7f6;
            font-family: 'Open Sans', sans-serif;
            margin: 0;
            padding: 0;
        }

        .btn_all {
            text-decoration: none;
            color: #007BFF;
        }

        .container {
            max-width: 960px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        #h1_all {
            color: #0056b3;
            font-weight: 700;
            margin-bottom: 10px;
        }

        #p_all {
            color: #555;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .btn {
            padding: 10px 20px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .header {
            background-color: #fff;
            padding: 20px;
            border-bottom: 2px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .username {
            color: #333;
            font-weight: bold;
        }

        .btn-head {
            background-color: transparent;
            color: #007BFF;
            border: 2px solid #007BFF;
            transition: all 0.3s ease;
        }

        .btn-logout:hover {
            background-color: #007BFF;
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
<body data-page="tournament-management">
<div class="header">
        {% if app.user %}
            <span class="username">Connecté en tant que {{ app.user.username }}</span>
        {% endif %}        {% if 'ROLE_ADMIN' in app.user.roles %}
            <a href="{{ path('admin') }}" class="btn-admin btn btn_all">Admin</a>
        {% endif %}
        <a href="{{ path('app_logout') }}" class="btn-head btn btn_all">Déconnexion</a>

    </div>

    <div class="container">
        <h1 id="h1_all">Bienvenue sur la Plateforme de Gestion de Tournois de Sport</h1>
        <p id="p_all">Organisez, participez et suivez vos tournois sportifs en toute simplicité !</p>

        <div class="btn-container">
            <a href="{{ path('player_home') }}" class="btn btn_all">Gestion des Joueurs</a>
            <a href="{{ path('registration_home') }}" class="btn btn_all">Inscriptions aux Tournois</a>
            <a href="{{ path('sport_match_home') }}" class="btn btn_all">Gestion des Parties</a>
            <a href="{{ path('tournament_home') }}" class="btn btn_all">Gestion des Tournois</a>
        </div>
    </div>
</body>
{% endblock %}

